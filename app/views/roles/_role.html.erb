<div class="card vcard">
  <div class="card-block">
    <h6 class="card-title">
      <%= icon('far', 'user') if role.person?%>
      <%= icon('far', 'paw') if role.animal? %>
      <%= icon('far', 'users') if role.group? %>
      <%= icon('far', 'building') if role.place? %>
      <%= icon('far', 'map-marker') if role.thing? %>
      <% if controller.controller_name.eql?('roles') && controller.action_name.eql?('show') %>
        <%= role.name.pluralize %>
      <% else %>
        <%= link_to role.name, role %>
      <% end %>
      <span class="badge badge-secondary">
        <%= role.personal_roles_count %>
      </span>
    </h6>
  </div>
</div>
