<% content_for(:page_title) {t '.page_title'} %>
<% content_for(:title) {t '.page_heading'} %>

<div class="row">
  <div class="col-lg-5">
<%= form_for(@role) do |f| %>
  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="mb-3">
    <%= f.label :abbreviation %>
    <%= f.text_field :abbreviation %>
  </div>
  <div class="mb-3">
    <%= f.label :prefix %>
    <%= f.text_field :prefix %>
  </div>
  <div class="mb-3">
    <%= f.label :suffix %>
    <%= f.text_field :suffix %>
  </div>
  <div class="mb-3">
    <%= f.label :role_type %>
    <%= f.collection_select(:role_type, Role.types, :to_s, :to_s, { include_blank: true }, { class: 'form-select' }) %>
  </div>
  <%= f.submit t('buttons.save') %>
<% end %>
</div>
