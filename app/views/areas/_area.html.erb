<div class="col-sm-3 col-lg-2 mb-2">
  <div class="card">
    <div class="card-header">
      <% if area.country %>
        <span class="flag-icon flag-icon-<%= area.country.alpha2 %>"></span>
      <% end %>
      <% if controller.controller_name.eql?('area_plaques') && controller.action_name.eql?('show') %>
        <%= area.name %>
      <% else %>
        <%= link_to area.name, area_plaques_path(area) %>
      <% end %>
    </div>
    <div class="card-body">
      <div class="card-title">
        <span class="badge bg-secondary pull-right">
          <%= pluralize(area.plaques_count, t('activerecord.models.plaque').downcase) %>
        </span>
        <%= icon(:far, :compass) if area.geolocated? %>
      </div>
    </div>
  </div>
</div>
