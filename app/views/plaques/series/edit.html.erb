<% content_for :page_title, "Edit series information for plaque \#" + @plaque.id.to_s %>
<% content_for :title do %>
  Edit series information for the <%= link_to @plaque.title, @plaque %>
<% end %>
<%= render 'plaques/edit_bar', plaque: @plaque %>

<%= form_for @plaque do |f| %>
  <div class="form-group row">
    <%= f.label :series_id, t('.series_label'), class: 'form-control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.collection_select :series_id, @series, :id, :name, {class: 'form-control', include_blank: true} %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :series_ref, t('.series_ref_label'), class: 'form-control-label col-sm-2' %>
    <div class="col-sm-3">
      <%= f.text_field :series_ref, {class: 'form-control', include_blank: true} %>
      <%= content_tag("p", link_to(t('.add_new_series'), new_series_path)) if current_user %>
    </div>
  </div>
  <%= f.submit t('buttons.save'), class: 'btn btn-primary' %>
<% end %>
