<div class="card">
  <div class="card-body">
    <div class="card-title">
      <span class="flag-icon flag-icon-<%= country.alpha2 %>"></span>
      <% if controller.controller_name.eql?('countries') && controller.action_name.eql?('show') %>
        <%= country.name %>
      <% else %>
        <%= link_to(country.name, country) %>
      <% end %>
    </div>
    <p class="card-text">
      <span class="badge badge-secondary pull-right"><%= pluralize(country.plaques_count, 'plaque') %></span>
      <% if controller.controller_name.eql?('countries') && controller.action_name.eql?('show') %>
        <small><%= @percentage_curated %>% have been curated</small>
      <% else %>
       <%= icon(:far, :compass) if country.geolocated? %>
      <% end %>
    </p>
  </div>
</div>
