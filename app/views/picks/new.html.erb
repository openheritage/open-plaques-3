<% content_for(:page_title) {t '.page_title'} %>
<% content_for(:title) {t '.page_heading'} %>

<%= form_for @picks, url: picks_path do |f| %>
  <div class="mb-3">
    <%= f.label :plaque_id %>
    <%= f.text_field :plaque_id %>
  </div>
  <div class="mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, :rows=>5, :cols=>80 %>
  </div>
  <div class="mb-3">
    <%= f.label :proposer %>
    <%= f.text_field :proposer, maxlength: "40" %>
  </div>
  <%= f.submit t('buttons.save') %>
<% end %>
