<div class="row pick">
  <div class="col-xs-4">
    <%= render partial: 'plaques/tile', object: pick.plaque, as: :plaque %>
  </div>
  <div class="col-xs-8">
    <blockquote class="blockquote">
      <p class="m-b-0">"<%= pick.description %>"</p>
      <footer class="blockquote-footer"><%= pick.proposer %></footer>
    </blockquote>
    <p class="label label-default label-pill pull-right">featured <%= pluralize(pick.featured_count, "time") %></p>
    <%= link_to t('buttons.edit'), edit_pick_path(pick) if current_user && current_user.is_admin? %>
  </div>
</div>
