<div class="col-sm-3 col-lg-2 mb-2">
  <div class="card">
    <div class="card-block">
      <h4 class="card-title">
        <% if controller.controller_name.eql?('verbs') && controller.action_name.eql?('show')%>
          <%= verb.name %>
        <% else %>
          <%= link_to verb.name, verb %>
        <% end %>
      </h4>
      <% @subject_count = verb.personal_connections_count %>
      <%= render partial: 'people/badge' %> 
    </div>
  </div>
</div>
